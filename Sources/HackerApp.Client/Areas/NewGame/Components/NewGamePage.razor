@using BlazorBootstrap
@attribute [Route(Path)]

<div class="container">
    <div class="row">
        <div class="col">
            <Button
                Color="@ButtonColor.Primary" @onclick="StartNewGame">
                Neues Spiel starten
            </Button>

            <Button
                Color="@ButtonColor.Primary" @onclick="LoadLastGame">
                Laden
            </Button>
        </div>
    </div>

    <EditPlayers Players="@Players"></EditPlayers>
</div>